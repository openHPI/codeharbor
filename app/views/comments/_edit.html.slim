= form_for :comment, url: task_comment_path(@task, @comment), method: 'put', remote: true do |f|
  .comment-text
    div style="width: 60%; margin: 0; display: inline-block;"
      = f.text_field :text, class: 'form-control'
    .actions.btn-group.float-end role="group"
      - if can? :edit, @comment
        = f.submit class: 'btn btn-light btn-sm' do
          i.fa.fa-save
          =< "Save"
        = link_to task_comment_path(@task, @comment), class: 'btn btn-light btn-sm', method: :delete, remote: true, data: {confirm: t('sure')}
          i.fa.fa-trash
          =< t('comments.button.delete')
