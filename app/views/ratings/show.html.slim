.page-header
  h1
    = 'Rating: ' + @rating.exercise.title
dl.dl-horizontal
  dt
    = 'Rating'
    | :
  dd
    = @rating.rating
  dt
    = 'Rating from'
    | :
  dd
    = @rating.user.email
.actions.btn-group[role="group"]
  = link_to 'New', new_rating_path,  class: 'btn btn-default'
  = link_to 'Back', exercises_path,  class: 'btn btn-default'
