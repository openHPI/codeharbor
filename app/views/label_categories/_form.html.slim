= form_for(@label_category) do |f|
  - if @label_category.errors.any?
    #error_explanation
      h2
        = pluralize(@label_category.errors.count, t('error'))
        = t('label_categories.errorMessage') prohibited this label_category from being saved:
      ul
        - @label_category.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :name, t('label_categories.name')
    br
    = f.text_field :name
  .actions
    = f.submit
