- model_class = Cart
h2
  = t('carts.header')
table.table
  thead
    tr
      th
        = t('carts.exercises')
      th
        = ''
  tbody
    - if @cart.exercises.empty?
      tr
        td
          = t('carts.noExercisesAdded')
        td
          = ''
    - else
      - @cart.exercises.each do |exercise|
        tr
          td
            = link_to exercise.title, exercise_path(exercise)
          td
            = link_to '-', remove_exercise_cart_path(@cart, exercise: exercise), class: 'btn btn-danger btn-xs'
br
.btn-group
  = link_to t('carts.show.download_all'), download_all_cart_path(@cart), class: 'btn btn-important'
  = link_to t('carts.show.remove_all'), remove_all_cart_path(@cart), class: 'btn btn-important'

