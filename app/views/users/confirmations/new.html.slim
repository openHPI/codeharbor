.header
  .std-heading
    i.fa.fa-envelope style='color: #444444'
    =< t('users.resend_confirmation')

= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
  = bootstrap_devise_error_messages!

  .form-group
    = f.label :email
    = f.email_field :email,
            required: true,
            autofocus: true,
            placeholder: t('users.new.email'),
            value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
            autocomplete: 'email',
            class: 'form-control'

  .form-group
    .btn-group[role='group']
      = button_tag type: 'submit', class: 'btn btn-important' do
        i.fa.fa-envelope
        =< t('users.resend_confirmation')
      = link_to :back, class: 'btn btn-important' do
        i.fa.fa-remove style=('color: gray')
        =< t('users.back')

= render 'users/shared/links'
