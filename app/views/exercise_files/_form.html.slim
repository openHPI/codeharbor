= form_for @exercise_file do |f|
  - if @exercise_file.errors.any?
    #error_explanation
      h2
        = pluralize(@exercise_file.errors.count, t('error'))
        = t('exFiles.errorMessage')
      ul
        - @exercise_file.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :main, t('exFiles.main')
    br/
    = f.text_field :main
  .field
    = f.label :content, t('exFiles.content')
    br/
    .edit
      .editor
        = @exercise_file.content
      textarea#exercise_file_content.hidden name="exercise_file[content]" style="display:none;"
        = @exercise_file.content
  .field
    = f.label :path, t('exFiles.path')
    br/
    = f.text_field :path
  .field
    = f.label :solution, t('exFiles.solution')
    br/
    = f.text_field :solution
  .field
    = f.label :file_extension, t('exFiles.extention')
    br/
    = f.text_field :file_extension
  .field
    = f.label :exercise_id
    br/
    = f.text_field :exercise_id
  .actions
    = f.submit
